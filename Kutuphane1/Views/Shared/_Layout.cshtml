@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html lang="tr">
<head>
	<meta charset="utf-8" encoding="utf8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="Content-Type" content="text/html; charset:windows-1254" />
	<meta http-equiv="content-language" content="tr" />

	<title>@ViewData["Title"] - Kutuphane1</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/lib/select2/select2.min.css" />
	<link rel="stylesheet" href="~/lib/select2-bootstrap-theme/select2-bootstrap.min.css" />


</head>
<body>
    <header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-5">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">
					<img src="~/images/books_32.png" alt="" style="margin-right:-15px" />
				</a>


				<a class="navbar-brand mb-0" asp-controller="Home" asp-action="Index">Kütüphane Sistemi</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse " id="navbarNav">
					<ul class="navbar-nav m-auto">
						<li class="nav-item active">
							<a class="nav-link text-dark" asp-area="" asp-controller="OrtakRaf" asp-action="Liste">Ortak Raf Listesi</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="KitapAdi" asp-action="Liste">Kitap Adı Listesi</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="SayisalKitap" asp-action="Liste">Sayısal Kitap Listesi</a>
						</li>

					</ul>
					<partial name="_LoginPartial" />
				</div>


			</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Kutuphane1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery-3.6.0.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatable/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/select2/select2.min.js" asp-append-version="true"></script>
    <script src="~/js/select2.js" asp-append-version="true"></script>
    <script src="~/js/numberformat.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>